{
  "version": 2,
  "name": "steganography-backend",
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "production",
    "MONGODB_URI": "@mongodb_uri",
    "BLOCKCHAIN_PRIVATE_KEY": "@blockchain_private_key", 
    "BLOCKCHAIN_RPC_URL": "@blockchain_rpc_url",
    "BLOCKCHAIN_CHAIN_ID": "80002"
  }
}
