{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend && java -Dserver.port=$PORT -jar target/png-steganography-1.0.0.jar",
    "healthcheckPath": "/api/steganography/records",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
